<?xml version="1.0"?>
<!--
build commands
[RadiantPath]: path to Radiant .. C:\Program Files\Gtkradiant
[EnginePath]: path to the engine .. C:\ufoai\ C:\Program Files\UFOAI\ /usr/local/games/ufoai/
-->
<project version="2.0">
  <var name="ufo2map">"[EnginePath]ufo2map"</var>

  <build name="Entities">
    <command>[ufo2map] -onlyents "[MapFile]"</command>
  </build>

  <build name="Test build">
    <command>[ufo2map] -nice 19 "[MapFile]"</command>
  </build>

  <build name="Final build">
    <command>[ufo2map] -nice 19 -extra "[MapFile]"</command>
  </build>
</project>


