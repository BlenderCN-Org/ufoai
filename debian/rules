#!/usr/bin/make -f
# -*- makefile -*-
# Copyright 2004, 2006 Yann Dirson.
# Based on debhelper sample by Joey Hess.

FONTDIR=debian/ufoai-data/usr/share/games/ufoai/media
export LC_ALL=C
export DH_OPTIONS

CFLAGS = -Wall -g

# let's do debugging
#export DEB_BUILD_OPTIONS=nostrip

ifneq (,$(findstring noopt,$(DEB_BUILD_OPTIONS)))
	CFLAGS += -O0
else
	CFLAGS += -O4
endif

MAINVER := $(shell dpkg-parsechangelog | sed -ne 's/^Version: *\([^~-]*\).*/\1/p' )
SVNREV := $(shell dpkg-parsechangelog | sed -ne 's/^Version: .*~svn\([^-]*\).*/\1/p' )
SVNBRANCH = trunk
TMPDIR = /tmp/
ORIGDIR = ufoai_$(MAINVER)~svn$(SVNREV).orig
ORIGTGZ = ufoai_$(MAINVER)~svn$(SVNREV).orig.tar.gz
DEBTGZ  = ufoai_$(MAINVER)~svn$(SVNREV).debian.tar.gz

../$(ORIGTGZ):
	svn export -r $(SVNREV) \
	https://ufoai.svn.sourceforge.net/svnroot/ufoai/ufoai/$(SVNBRANCH) \
	$(TMPDIR)/$(ORIGDIR)
	-rm -rf $(TMPDIR)/$(ORIGDIR)/contrib
	-rm -rf $(TMPDIR)/$(ORIGDIR)/debian
	cd $(TMPDIR) ; tar -zcf $(ORIGTGZ) $(ORIGDIR) ; cd $(CURDIR)
	rm -rf $(TMPDIR)/$(ORIGDIR)
	mv $(TMPDIR)/$(ORIGTGZ) $(CURDIR)/..

get-orig-source: ../$(ORIGTGZ)

debtar: clean
	dh_testdir
	tar -zcf ../$(DEBTGZ) debian/

config.status:
	dh_testdir
	./configure --with-curses=no --datadir=/usr/share/games --libdir=/usr/lib/games --prefix=/usr

build-arch: stamps/build-arch
stamps/build-arch: config.status
	dh_testdir

	$(MAKE) BUILDDIR=$(CURDIR)/BUILD
	$(MAKE) BUILDDIR=$(CURDIR)/BUILD radiant

	mkdir -p stamps
	touch $@

build-indep: stamps/build-indep
stamps/build-indep: config.status
	dh_testdir

	$(MAKE) BUILDDIR=$(CURDIR)/BUILD lang maps pk3
	$(MAKE) -C src/docs/tex

	mkdir -p stamps
	touch $@

really_clean:
	dh_testdir
	dh_testroot
	rm -rf stamps

	[ ! -f Makefile ] || $(MAKE) BUILDDIR=$(CURDIR)/BUILD clean
	$(MAKE) -C src/docs/tex clean
	# WARNING: building maps takes ages
	# find base/maps -name '*.bsp' | xargs --no-run-if-empty rm
	-rm base/*.pk3
	-rm Makefile config.h config.log config.status
	-rm -rf base/i18n
	dh_clean

clean: really_clean

install-arch: stamps/build-arch
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs
	dh_install

install-indep: stamps/build-indep
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs
	dh_install

	# add links to fonts
	mkdir -p $(FONTDIR)
	#From ttf-freefont
	ln -s /usr/share/fonts/truetype/freefont/FreeSans.ttf $(FONTDIR)
	#From ttf-dejavu-core
	ln -s /usr/share/fonts/truetype/ttf-dejavu/DejaVuSans.ttf $(FONTDIR)
	#From ttf-thai-tlwg
	ln -s /usr/share/fonts/truetype/thai/Loma.ttf $(FONTDIR)
	ln -s /usr/share/fonts/truetype/thai/Norasi.ttf $(FONTDIR)
	#From ttf-wqy-zenhei
	ln -s /usr/share/fonts/truetype/wqy/wqy-zenhei.ttf $(FONTDIR)
	# This is not in Debian yet, see ITP #461757 for ttf-ume
	cp base/media/ume-pgo4.ttf $(FONTDIR)

# No architecture-independent files here.
binary-indep: DH_OPTIONS=-i
binary-indep: install-indep
	dh_testdir
	dh_testroot
	dh_installchangelogs
	dh_installdocs
	dh_link
	dh_compress -X.pdf
	dh_fixperms
	dh_installdeb
	dh_gencontrol
	dh_md5sums
	dh_builddeb

# Build architecture-dependent files here.
binary-arch: DH_OPTIONS=-a
binary-arch: install-arch
	dh_testdir
	dh_testroot
	dh_installchangelogs
	dh_installdocs
	ln -s ../ufoai-data debian/ufoai/usr/share/doc/ufoai/docs
	dh_buildinfo
	dh_installexamples
	dh_installmenu
	dh_installman debian/ufo.6 debian/ufoded.6
	dh_link
	dh_strip
	dh_compress -X.pdf
	dh_fixperms
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

build: build-arch build-indep
binary: binary-indep binary-arch
.PHONY: build build-arch build-indep clean binary-indep binary-arch binary install
