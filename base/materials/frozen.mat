/* neon003: big white rotating light with additional flare effect (used outside) */
{
	material tex_lights/neon003
	{
		texture tex_lights/neon003
		rotate 0.1
		color 1.0 1.0 0.9
		flare 7
	}
}

/* Rotating fan blades for the generator cooling system (on tile st_i01, st_i08) */
{
	material tex_base/vent_round2
	bump 1.0
	parallax 1.0
	specular 1.0
	hardness 1.0
	{
		texture tex_base/vent_round2_a0
		blend GL_SRC_ALPHA GL_ONE_MINUS_SRC_ALPHA
		anim 6 48
	}
}

/* blend some snow onto the wooden roof of st_h01 */
{
	material tex_mattn/roof001
		bump 2.0
		parallax 1.0
		specular 0.1
		hardness 0.1
			{
				texture tex_nature/snow003
				dirtmap 1.0
				lightmap
			}
}

/* blend some snow onto the crashed fighter tile */
{
	material tex_nature/desert007
			{
				texture tex_nature/snow003
				dirtmap 1.0
				lightmap
			}
}

/* flare for the warning light on top of the windmill */
{
	material tex_lights/light004
	{
		flare 2
		scale.s 2.0
		color 1.0 0.0 0.0
		lightmap
	}
}
