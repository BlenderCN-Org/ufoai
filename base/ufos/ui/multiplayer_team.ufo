		/**
		 * @param[in] <1> true or false to hide or show the firemode nodes
		 */
		confunc hide_firemode {
			// only show them when the object info window is active  
			if "*node:this.parent.item_name@invis == 0" {
				*node:this.parent.firemode_dec invis <1>
				*node:this.parent.firemode_inc invis <1>
				*node:this.parent.header_firemode invis <1>
				*node:this.parent.firemode_name invis <1>
			}
		}
		
		/**
		 * @param[in] <1> 1 or 2 for ammo or weapon. 0 to deactivate them
		 */
		confunc change_action {
			*cvar:mn_changeitem <1>
			if "*cvar:mn_changeitem != 0" {
				// only show them when the object info window is active  
				if "*node:this.parent.item_name@invis == 0" {
					*node:this.parent.action_dec invis false 
					*node:this.parent.action_inc invis false 
					*node:this.parent.header_item invis false
					if "*cvar:mn_changeitem == 2" {
						cmd "hide_firemode true;"
					} else {
						cmd "hide_firemode false;"
					}				
				}
			} else {
				*node:this.parent.action_dec invis true 
				*node:this.parent.action_inc invis true 
				*node:this.parent.header_item invis true
				cmd "hide_firemode true;" 
			}
		}

