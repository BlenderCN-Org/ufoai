	confunc update_ufopedia_layout {
		
		// is right column is not empty?
		*cvar:mn_rightpanel = 0
		if ( *cvar:mn_upimage_top ne "" ) { *cvar:mn_rightpanel = 1 } 
		if ( *cvar:mn_upmodel_top ne "" ) { *cvar:mn_rightpanel = 1 } 
		if ( *cvar:mn_upmodel_bottom ne "" ) { *cvar:mn_rightpanel = 1 } 
		if ( *cvar:mn_uprequirement ne "" ) { *cvar:mn_rightpanel = 1 } 

		// invalidate techtree selection
		*content.requirement.techtree@lineselected = -1

		// update tab
		if ( *cvar:mn_uppreavailable == 1 ) {
			cmd "mn_updateoption <path:root>.content.navigation preresearch display" 
		} else {
			cmd "mn_updateoption <path:root>.content.navigation preresearch hide"
			// update the tab if the hiden one is selected
			if ( *cvar:ufopedia_content eq "preresearch" ) {
				*cvar:ufopedia_content = "description"
			} 
		}
		if ( *cvar:mn_upmetadata == 1 ) {
			cmd "mn_updateoption <path:root>.content.navigation stats display" 
		} else {
			cmd "mn_updateoption <path:root>.content.navigation stats hide"
			// update the tab if the hiden one is selected
			if ( *cvar:ufopedia_content eq "stats" ) {
				*cvar:ufopedia_content = "description"
			}
		}

		if ( *cvar:ufopedia_content eq "description" ) {
			*content.ufopedia@invis = false
			*content.ufopedia_scroll@invis = false
			*content.description@invis = true
			*content.description_scroll@invis = true
			*content.requirement@invis = false
			if ( *cvar:mn_rightpanel == 1 ) {
				*content.ufopedia@width = 406
			} else {
				*content.ufopedia@width = 583
			}
			cmd "set mn_uppretext 0; mn_upupdate;"
		} elif ( *cvar:ufopedia_content eq "preresearch" ) {
			*content.ufopedia@invis = false
			*content.ufopedia_scroll@invis = false
			*content.description@invis = true
			*content.description_scroll@invis = true
			*content.requirement@invis = false
			if ( *cvar:mn_rightpanel == 1 ) {
				*content.ufopedia@width = 406
			} else {
				*content.ufopedia@width = 583
			}
			cmd "set mn_uppretext 1; mn_upupdate;"
		} elif ( *cvar:ufopedia_content eq "stats" ) {
			*content.ufopedia@invis = true
			*content.ufopedia_scroll@invis = true
			*content.description@invis = false
			*content.description_scroll@invis = false
			*content.requirement@invis = true
		}

		// anyway we do not display requirement if it is not need
		if ( *cvar:mn_uprequirement eq "" ) {
			*content.requirement@invis = true
		}

		cmd "del mn_rightpanel"
	}

	confunc mn_up_empty
	{
		*node:root.content@invis = true
	}

