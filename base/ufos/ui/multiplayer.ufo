		*cvar:i = 0
		while ( *cvar:i <= 15 ) {
			if ( *cvar:adr<cvar:i> ne "" ) {
				*content.resetadr<cvar:i>@invis = false
				*content.adr<cvar:i>@invis = false
			} else {
				*content.resetadr<cvar:i>@invis = true
				*content.adr<cvar:i>@invis = true
			}
			*cvar:i = ( *cvar:i + 1 )
		}
		delete *cvar:i
	}

	func onInit {
		cmd "check_bookmarks;"
	}
}

