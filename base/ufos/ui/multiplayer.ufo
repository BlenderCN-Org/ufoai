	func onInit
	{
		cmd "mp_selectteam_init;"
		*cvar:mn_entry = ""
		*cvar:mn_chatselect = "chat"
		*cvar:cl_ready = 0
	}
	
	func onClose
	{
		delete *cvar:mn_entry	
		delete *cvar:mn_chatselect
	}
}

