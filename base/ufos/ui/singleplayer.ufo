// ==================
// SINGLE PLAYER MENU
// ==================

menu singleplayer
{
	// ==================
	// background
	// ==================

	pic background
	{
		image		ui/main_bg
	}

	string version
	{
		string		"*cvar version"
		pos			"10 744"
		size		"550 20"
	}

	// ==================
	// buttons
	// ==================

	button button_campaign
	{
		string		"_Campaign"
		pos			"640 170"
		size		"256 64"
		image		ui/button_green_big
		blend		true
		font		f_menubig
		color		"0 0.5 0 1"
		selectcolor	"1 1 1 1"
		onClick		{ cmd "game_exit; mn_push campaigns;" }
	}

	button button_skirmish
	{
		pos	"640 240"
		size "256 64"
		onClick	{ cmd "mn_push skirmish;" }
		image	ui/button_green_big	blend true
		font	f_menubig
		color	"0 0.5 0 1"
		selectcolor "1 1 1 1"
		string	"_Skirmish"
	}

	button button_back
	{
		string		"_Back"
		pos			"640 520"
		size		"256 64"
		image		ui/button_green_big
		blend		true
		font		f_menubig
		color		"0 0.5 0 1"
		selectcolor	"1 1 1 1"
		onClick		{ cmd "mn_pop;" }
	}
}

