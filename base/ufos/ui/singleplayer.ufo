{
	pic background
	{
		image		ui/losegame_bg
	}

	string lostgame
	{
		string		"_You've lost the game"
		pos			"12 20"
		size		"1000 35"
		font		"f_menubig"
		textalign	uc
		color		"0 0.8 0 1"
	}

	// reason why you've lost
	text reason
	{
		color		"0 0.8 0 0.9"
		textalign	uc
		pos			"256 640"
		size		"512 100"
		lineheight	"20"
		rows		"5"
		font		"f_normal"
		scrollbar	 true
		textid	TEXT_STANDARD
	}

	string lostgame_click
	{
		string		"_Click to continue"
		pos			"814 750"
		size		"200 20"
		font		"f_verysmall"
		textalign	ur
		color		"0 0.8 0 0.9"
	}

	// ==================
	// leave
	// ==================

	zone leave
	{
		size		"1024 768"
		onClick		{ cmd "mn_pop;" }
	}
}

