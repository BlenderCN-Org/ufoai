		*(pic)bt_left_fm<1>@texl = "0 0"
		*(pic)bt_left_fm<1>@texh = "214 63"
	}

	confunc set_left_inv {
		*(pic)bt_left_fm<1>@invis = true
	}

	confunc set_left_vis {
		*(pic)bt_left_fm<1>@invis = false
	}

	/* Firemode checkbox console functions (see also the "xxx_inv" functions above) ===================================*/

	confunc set_left_cb_ina {
		*(pic)bt_left_fm<1>.cb@texl = "0 0"
		*(pic)bt_left_fm<1>.cb@texh = "31 31"
