/**
 * @brief Define interface shared by all huds.
 * @note called "ahud" to be loaded before another huds
 */
window ahud {


	confunc hudselect { }
	confunc huddeselect { }
	confunc huddisable { }

	confunc selpl { cmd "selpls;selpla;" }
	confunc selpr { cmd "selprs;selpra;" }

	confunc deselpl { cmd "deselpls;deselpla;" }
	confunc deselpr { cmd "deselprs;deselpra;" }
	confunc deselrl { cmd "deselrls;deselrla;" }
	confunc deselrr { cmd "deselrrs;deselrra;" }

	confunc displ { cmd "displs;displa;" }
	confunc dispr { cmd "disprs;dispra;" }
	confunc disrl { cmd "disrls;disrla;" }
	confunc disrr { cmd "disrrs;disrra;" }

	confunc deselstand { }
	confunc deselcrouch { }
	confunc disstand { }
	confunc discrouch { }

	/* Prevent time for crouch */
	confunc crouch_checkbox_disable { }
	confunc crouch_checkbox_clear	{ }
	confunc crouch_checkbox_check	{ }

	confunc reserve_shot_clear { 
		*cvar:mn_shot_reservation_tt = "_Reserve TUs for shooting."
		cmd "reserve_shot_clear_s;reserve_shot_clear_a;"
	}
	
	confunc reserve_shot_check { 
		cmd "reserve_shot_check_s;reserve_shot_check_a;"
	}
	
	confunc reserve_shot_disable {
		cmd "reserve_shot_disable_s;reserve_shot_disable_a;"
	}

	confunc startreactionmany { cmd "startreactionmanys;startreactionmanya;" }
	confunc startreactionmany_impos { cmd "startreactionmanys_impos;startreactionmanya_impos;" }
	confunc startreactiononce { cmd "startreactiononces;startreactiononcea;" }
	confunc startreactiononce_impos { cmd "startreactiononces_impos;startreactiononcea_impos;" }
	confunc deselreaction { cmd "deselreactions;deselreactiona;" }
	confunc disreaction { cmd "disreactions;disreactiona;" }

	confunc deselheadgear { cmd "hud_deselheadgear;althud_deselheadgear;" }
	confunc disheadgear { cmd "hud_disheadgear;althud_disheadgear;" }

	confunc startround { cmd "startrounds;startrounda;" }
	confunc endround { cmd "endrounds;endrounda;" }
	
	confunc openradar { cmd "mn_push radarwindow;" }

	confunc unhide_chatscreen {
		*chatscreen@invis = false
	}
	
	/**
	 * @param <1> the id of the soldier (starting at 0)
	 * @param <2> the model path of the head model
	 * @param <3> the hp of the actor 
	 * @param <4> the max hp of the actor
	 * @param <5> the tus of the actor
	 * @param <6> the max tus of the actor
	 * @param <7> the morale of the actor
	 * @param <8> the max morale of the actor
	 * @param <9> the stun value of the actor
	 * @param <10> the tooltip 
	 */
	confunc updateactorvalues {
		*cvar:mn_head<1> = "<2>"
		*cvar:mn_hp<1> = "<3>"
		*cvar:mn_hpmax<1> = "<4>"
		*cvar:mn_tu<1> = "<5>"
		*cvar:mn_tumax<1> = "<6>"
		*cvar:mn_morale<1> = "<7>"
		*cvar:mn_moralemax<1> = "<8>"
		*cvar:mn_stun<1> = "<9>"
		*cvar:mn_soldier<1>_tt = "<10>"
	}
}

