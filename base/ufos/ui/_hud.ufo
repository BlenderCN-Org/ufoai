	/* texture map
		checkbox:
		hud/checkbox (inactive)	->	texl "0 0"	texh "31 31"
		hud/checkbox (active)	->	texl "0 32"	texh "31 63"
		firemode:
		hud/firemode (active)	->	texl "0 0"	texh "214 63"
		hud/firemode (inactive)	->	texl "0 64"	texh "214 128"
	*/

	confunc set_right_ina {
		*(pic)bt_right_fm<1>@texl = "0 64"
		*(pic)bt_right_fm<1>@texh = "214 128"
