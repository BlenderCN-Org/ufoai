	text messagesystem
	{
		pos			"0 0"
		size		"768 20"
		bgcolor		"0 0 0 .5"
		lineheight	"20"
		rows		1
		dataid		TEXT_MESSAGESYSTEM
		onMouseEnter {
			if "*cvar:mn_messagesystem < 2" {
				*node:root.messagesystem@rows 12
				*node:root.messagesystem@height 240
			}
		}
		onMouseLeave {
			if "*cvar:mn_messagesystem < 2" {
				cmd "messagesystem_changemode"
			}
		}
		onWheel		{
			*node:(abstractscrollbar)root.messagesystem_scroll@current <text_scroll>
		}
		onViewChange {
			*node:(abstractscrollbar)root.messagesystem_scroll@fullsize <lines>
			*node:(abstractscrollbar)root.messagesystem_scroll@current <text_scroll>
		}
	}
	vscrollbar messagesystem_scroll {
		invis		true
		image		ui/scrollbar_v_green
		bgcolor		"0 0 0 .5"
		pos			"749 0"
		height		"768"
		current		0
		viewsize	38
		fullsize	50
		hidewhenunused true
		onChange	{
			cmd "mn_textscroll messagesystem <lastdiff>;"
		}
	}

	confunc messagesystem_changemode
	{
		/* one line */
		if "*cvar:mn_messagesystem == 0" {
			*messagesystem@rows	1
			*messagesystem@size	"768 20"
			*messagesystem_scroll@invis true
		}
		/* 6 lines */
		if "*cvar:mn_messagesystem == 1" {
			*messagesystem@rows	6
			*messagesystem@size	"768 120"
			*messagesystem_scroll@invis true
		}
		/* 12 lines */
		if "*cvar:mn_messagesystem == 2" {
			*messagesystem@rows	12
			*messagesystem@size	"768 240"
			*messagesystem_scroll@invis true
		}
		/* full screen */
		if "*cvar:mn_messagesystem == 3" {
			*messagesystem@rows	38
			*messagesystem@size	"749 768"
			*messagesystem_scroll@invis false
			cmd "game_timestop;"
		}

