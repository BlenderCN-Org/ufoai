	tab defencetype {
		pos		"17 75"
		size	"667 38"
		cvar	*cvar:mn_bdef_type
		onChange {
			cmd "bdef_type >cvar:mn_bdef_type>;"
		}
		option missile {
			label	"_Missile Defences"
