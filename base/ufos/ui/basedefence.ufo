	/* @todo: We should check if the slot is empty but can't do from here */
	confunc update_buttons {
		if ( *node:(text)root.slots.slotlist@lineselected < 0 ) {
			*node:root.bt_add@disabled true
			*node:root.bt_remove@disabled true
		} elif ( *node:(text)root.slots.slotlist@lineselected >= *node:(text)root.slots.slotlist@lines ) {
			*node:root.bt_add@disabled true
			*node:root.bt_remove@disabled true
		} elif ( *node:(text)root.store.storelist@lineselected < 0 ) {
			*node:root.bt_add@disabled true
			*node:root.bt_remove@disabled false
		} elif ( *node:(text)root.store.storelist@lineselected >= *node:(text)root.store.storelist@lines ) {
			*node:root.bt_add@disabled true
			*node:root.bt_remove@disabled false
		} else {
			*node:root.bt_add@disabled false
			*node:root.bt_remove@disabled false
		}
	}

