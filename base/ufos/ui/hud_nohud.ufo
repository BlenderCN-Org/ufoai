// ==================
// EMPTY HUD
// ==================
// with console command forwarding

window hud_nohud extends hud
{
	{
		fill		true
		starlayout	true
	}

	func showinventory
	{
		cmd "ui_push hudinv;"
	}

	// ==================
	// render rectangle
	// ==================
	battlescape render
	{
		pos		"0 0"
		size	"1024 768"
		num		LAYOUTALIGN_FILL
	}

	confunc hidehud {
		if (*cvar:cl_worldlevel ne "0") {
			cmd "ui_push hud_nohud"
		}
	}

}
