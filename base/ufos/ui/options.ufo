	// ==================
	// background
	// ==================

	pic background
	{
		image		ui/options_bg
	}

	func hidepanels
	{
		*(panel)options_game@invis true
		*(panel)options_sound@invis true
		*(panel)options_video@invis true
		*(panel)options_input@invis true
		*(panel)options_keys@invis true
	}

	// ==================
	// buttons
	// ==================

	button button_game
	{
		string		"_Game"
		pos			"80 170"
		size		"256 64"
		image		ui/button_green_big
		font		f_menubig
		color		"0 0.5 0 1"
		selectcolor	"1 1 1 1"
		onClick		{
			call hidepanels
			*(panel)options_game@invis false
		}
	}

	button button_video
	{
		string		"_Video"
		pos			"80 240"
		size		"256 64"
		image		ui/button_green_big
		font		f_menubig
		color		"0 0.5 0 1"
		selectcolor	"1 1 1 1"
		onClick		{
			call hidepanels
			*(panel)options_video@invis false
			cmd "copy mn_vidmode vid_mode;"
		}
	}

	button button_sound
	{
		visiblewhen "*cvar:snd_init == 1"

		string		"_Sound"
		pos			"80 310"
		size		"256 64"
		image		ui/button_green_big
		font		f_menubig
		color		"0 0.5 0 1"
		selectcolor "1 1 1 1"
		onClick		{
			call hidepanels
			*(panel)options_sound@invis false
		}
	}

	button button_sound_na
	{
		visiblewhen "*cvar:snd_init == 0"

		string		"_Activate Sound"
		tooltip		"_Sound is currently not activated. Click here to activate it."
		pos			"80 310"
		size		"256 64"
		image		ui/button_green_big
		font		f_menubig
		color		"0 0.5 0 1"
		selectcolor	"1 1 1 1"
		onClick		{
			cmd "snd_init 1;"
		}
	}

	button button_input
	{
		string		"_Input"
		pos			"80 380"
		size		"256 64"
		image		ui/button_green_big
		font		f_menubig
		color		"0 0.5 0 1"
		selectcolor	"1 1 1 1"
		onClick		{
