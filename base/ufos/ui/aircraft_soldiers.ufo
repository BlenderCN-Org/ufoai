			selectcolor	"0 0 0 1"

			onClick	{
				*cvar:cl_selected2 = <cvar:cl_selected>
				cmd "ui_addlistener equipment@onWindowClosed <path:root>.listen_close_equipment;"
				cmd "ui_push equipment;"
			}
		}
