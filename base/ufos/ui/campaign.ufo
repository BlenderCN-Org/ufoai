// ==================
// CAMPAIGN MENU
// ==================

window campaigns
{
	// ==================
	// background
	// ==================

	pic background
	{
		image	ui/options_bg
	}

	string version
	{
		string	*cvar:version
		pos	"10 744"
	}

	string c_headline
	{
		string	"_Campaigns"
		pos	"640 80"
		font	f_big
	}

	// ==================
	// buttons
	// ==================
	button c_button_start
	{
		pos	"80 170"
		size "256 64"
		onClick	{ cmd "cp_start;" }
		image	ui/button_green_big
		font	f_menubig
		color	"0 0.5 0 1"
		selectcolor "1 1 1 1"
		string	"_Start campaign"
	}

	button button_load
	{
		string		"_Load"
		pos			"80 240"
		size		"256 64"
		image		ui/button_green_big
		font		f_menubig
		color		"0 0.5 0 1"
		selectcolor	"1 1 1 1"
		onClick		{ cmd "mn_push load;" }
	}

	button button_continue
	{
		visiblewhen "exists *cvar:mn_lastsave"

		string		"_Continue"
		tooltip		"_Load last saved game or continue playing"
		pos			"640 380"
		size		"256 64"
		image		ui/button_green_big
		font		f_menubig
		color		"0 0.5 0 1"
		selectcolor	"1 1 1 1"
		onClick		{ cmd "game_continue;" }
	}

	button c_button_exit
	{
		pos	"80 470"
		size "256 64"
		onClick	{ cmd "mn_pop;" }
		image	ui/button_green_big
		font	f_menubig
		color	"0 0.5 0 1"
		selectcolor "1 1 1 1"
		string	"_Back"
	}

	textlist campaignlist
	{
		pos		"500 140"
		size	"400 120"
		lineheight	"20"
		dataid		TEXT_CAMPAIGN_LIST
		onClick	{ cmd "campaignlist_click <lineselected>" }
		color	"0.60 0.60 0.60 1"
		selectcolor	"1 1 1 1"
		rows	"6"
		onViewChange	{
			*(abstractscrollbar)campaignlist_scroll@fullsize <lines>
			*(abstractscrollbar)campaignlist_scroll@current <viewpos>
			*(abstractscrollbar)campaignlist_scroll@viewsize <viewsize>
		}
	}

	vscrollbar campaignlist_scroll {
		image		ui/scrollbar_v_green
		pos			"905 140"
		height		"120"
		current		0
		viewsize	6
		fullsize	6
		hidewhenunused true
		onChange	{ *campaignlist@viewpos <current> }
	}

	text campaign_desc
	{
		dataid		TEXT_STANDARD
		pos			"500 320"
		size		"415 360"
		lineheight	20
		rows		18
		onViewChange {
			*(abstractscrollbar)campaign_desc_scroll@fullsize = <fullsize>
			*(abstractscrollbar)campaign_desc_scroll@current = <viewpos>
			*(abstractscrollbar)campaign_desc_scroll@viewsize = <viewsize>
		}
	}

	vscrollbar campaign_desc_scroll {
		image		ui/scrollbar_v_green
		pos			"923 320"
		height		360
		current		0
		viewsize	19
		fullsize	19
		hidewhenunused true
		onChange	{
			*campaign_desc@viewpos = <current>
		}
	}

	func onInit
	{
		cmd "game_setmode;cp_getcampaigns;"
	}
}

