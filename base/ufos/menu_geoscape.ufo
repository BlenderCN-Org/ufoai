	{
		if "mn_upunreadmail != 0"
		color	"0 0.5 0 1"
		font 	f_small
		tooltip	"_INBOX (with unread mails)"
		string	"_Mailclient"
		pos		"809 536"
		size	"175 34"
		click	{ cmd "mn_push ufopedia_mail;" }
		selectcolor	"1 1 1 1"
		image	menu/button_geoscape
		blend	true
	}

	button bt_mailclient_nomail
	{
		if "mn_upunreadmail == 0"
		color	"0 0.5 0 1"
		font 	f_small
		tooltip	"_INBOX"
		string	"_Mailclient"
		pos		"809 536"
		size	"175 34"
		click	{ cmd "mn_push ufopedia_mail;" }
		selectcolor	"1 1 1 1"
		image	menu/button_geoscape
		blend	true
	}

	button bt_stats
	{
		tooltip	"_Organisation statistics"
		pos		"809 577"
		color	"0 0.5 0 1"
		size	"175 34"
		font 	f_small
		string	"_Statistics"
