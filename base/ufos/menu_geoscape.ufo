		if "mn_base_count >= 8"
		tooltip	"_Max. bases reached"
		string	"_Create base"
		font 	f_small
		size	"175 34"
		pos		"809 659"
		color	"0.5 0.5 0.5 1"
		selectcolor	"1 1 1 1"
		image	menu/button_geoscape
		blend	true
		disabled	true
	}

