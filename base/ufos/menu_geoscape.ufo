menu map
{
	// ==================
	// don't render
	// ==================

	zone render
	{
		invis	true
	}

	// ==================
	// background
	// ==================

	map themap
	{
		// only if messagesystem is turned off
		if "mn_messagesystem == 0"
		pos		"0 0"
		size	"1024 768"
		click	mclick wheel
		rclick	{ cmd "mn_mapaction_reset;" }
		// menu
		excluderect
		{
			pos	"768 0"
			size	"256 768"
		}
	}

	map themap_wmessagesystem
	{
		// only if messagesystem is turned on in halfheight mode (click)
		if "mn_messagesystem == 1"
		pos	"0 0"
		size	"1024 768"
		click	mclick wheel
		rclick	{ cmd "mn_mapaction_reset;" }
		// menu
		excluderect
		{
			pos	"768 0"
			size	"256 768"
		}
		excluderect
		{
			pos	"0 0"
			size	"768 400"
		}
	}

	map themap_wfullmessagesystem
	{
		// only if messagesystem is turned on in in fullheight mode (rclick)
		if "mn_messagesystem == 2"
		pos	"0 0"
		size	"1024 768"
	}

	text messagesystem
	{
		pos	"0 0"
		size	"768 22"
		bgcolor	"0 0 0 .5"
		format	"20 0"
		height	1
		num		TEXT_MESSAGESYSTEM
		wheel
		scrollbar false
	}

	pic back
	{
		image	menu/geo_menu
		pos	"768 0"
		blend	true
	}

	// ==================
	// time
	// ==================

	string date
	{
		string	"*cvar mn_mapdate *cvar mn_maptime"
