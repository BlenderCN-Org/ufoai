	/**
	 * @note iaircraft interface
	 */
	confunc aircraft_change
	{
		*aircraft_list lineselected <1>
		cmd "airequip_updatemenu 2;"
		call airequip_zone1
	}

	func init
	{
		// default is weapons @sa aircraftItemType_t (inv_shared.h)
		cmd "mn_select_aircraft <cvar:mn_aircraft_id>"
