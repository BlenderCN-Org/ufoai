// ==================
// SINGLE PLAYER MENU
// ==================

menu singleplayer
{
	// ==================
	// background
	// ==================

	pic background
	{
		image		menu/main_bg
	}

	string version
	{
		string		"*cvar version"
		pos			"10 744"
		size		"550 20"
	}

	// ==================
	// buttons
	// ==================

	button button_new
	{
		string		"_New game"
		pos			"640 170"
		size		"256 64"
		image		menu/button_green_big
		blend		true
		font		f_menubig
		color		"0 0.5 0 1"
		selectcolor	"1 1 1 1"
		click		{ cmd "game_exit; mn_push campaigns;" }
	}

	button button_load
	{
		string		"_Load"
		pos			"640 240"
		size		"256 64"
		image		menu/button_green_big
		blend		true
		font		f_menubig
		color		"0 0.5 0 1"
		selectcolor	"1 1 1 1"
		click		{ cmd "mn_push load;" }
	}

	button button_save_na
	{
		// only if we have no game started yet
		visiblewhen "mn_main ne singleplayerInGame"

		string		"_Save"
		tooltip		"_No game to save"
		pos			"640 310"
		size		"256 64"
		image		menu/button_green_big
		blend		true
		font		f_menubig
		color		"0 0.5 0 1"
		selectcolor	"1 1 1 1"
	}

	button button_save
	{
		// only if we already have a game started
		visiblewhen "mn_main eq singleplayerInGame"

		string		"_Save"
		pos			"640 310"
		size		"256 64"
		click		{ cmd "mn_push save;" }
		image		menu/button_green_big
		blend		true
		font		f_menubig
		color		"0 0.5 0 1"
		selectcolor	"1 1 1 1"
	}

	button button_continue
	{
		visiblewhen "mn_lastsave"

		string		"_Continue"
		tooltip		"_Load last saved game or continue playing"
		pos			"640 380"
		size		"256 64"
		image		menu/button_green_big
		blend		true
		font		f_menubig
		color		"0 0.5 0 1"
		selectcolor	"1 1 1 1"
		click		{ cmd "game_continue;" }
	}

	button button_back
	{
		string		"_Back"
		pos			"640 520"
		size		"256 64"
		image		menu/button_green_big
		blend		true
		font		f_menubig
		color		"0 0.5 0 1"
		selectcolor	"1 1 1 1"
		click		{ cmd "game_exit;mn_pop;" }
	}
}

menu singleplayerInGame extends singleplayer
