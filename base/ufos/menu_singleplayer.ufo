	}

	button button_back
	{
		string		"_Exit"
		pos			"640 520"
		size		"256 64"
		image		menu/button_green_big
		blend		true
		font		f_menubig
		color		"0 0.5 0 1"
		selectcolor	"1 1 1 1"
		click		{ cmd "game_exit;mn_pop;" }
	}
}

