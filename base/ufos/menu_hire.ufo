		image	menu/empl_ll
		pos		"0 512"
	}

	pic back_lr
	{
		image	menu/empl_lr
		pos		"512 512"
	}

	// ==================
	// list
	// ==================

	text employeelist
	{
		pos		"40 30"
		size	"286 710"
//		bgcolor "1 1 1 0.5"
		format	"22 0"
		num	18
		click
		rclick
		mousefx	true
	}

