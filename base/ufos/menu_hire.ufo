	// ==================
	// buttons
	// ==================

	func empl_reset
	{
		*bt_scientists	color "1 1 1 0.8"
		*bt_soldier		color "1 1 1 0.8"
		*bt_workers		color "1 1 1 0.8"
		*bt_pilots		color "1 1 1 0.8"
	}
	func empl_soldiers
	{
		cmd "employee_init 0;"
		call empl_reset
		*bt_soldier		color "1 1 1 1"
	}
	func empl_scientists
	{
		cmd "employee_init 1;"
		call empl_reset
		*bt_scientists	color "1 1 1 1"
	}
	func empl_workers
	{
		cmd "employee_init 2;"
		call empl_reset
		*bt_workers		color "1 1 1 1"
	}
	func empl_pilots
	{
		cmd "employee_init 3;"
		call empl_reset
		*bt_pilots		color "1 1 1 1"
	}

