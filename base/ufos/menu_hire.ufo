	/**
	 * @param[in] <1> number of employee in the list
	 */
	confunc hire_update_number {
		cmd "mn_setnodeproperty scroll fullsize <1>"

	}

	vscrollbar scroll
	{
		image	menu/scrollbar_v_green	blend	true
		pos	"20 30"	size	"27 700"
		current 0
		viewsize 19
		fullsize 50
		change {
			cmd "mn_textscroll employee_list <lastdiff>; employee_scroll;"
		}
	}

	text employee_list
	{
		format	"38 100"
		color	"0 .78 0 1"
		selectcolor	"1 1 1 1"
		mousefx	true
		height	"19"
		pos	"60 32"
		size	"280 722"
		num		TEXT_LIST
//		bgcolor	"1 1 1 0.5"
		click
		wheel	{ cmd "employee_scroll;" }
	}

