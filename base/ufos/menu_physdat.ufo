// ==================
// HUD PHYSDATA
// ==================

menu hudphysdat extends physdata
{
	zone bt_physdata
	{
		image	hud/buttons1
		mousefx true
		pos		"983 266"
		size	"36 75"
		click	{ cmd "mn_pop;" }
	}

	zone bt_inventory
	{
		image	hud/buttons1
		mousefx true
		pos		"983 376"
		size	"36 75"
		click	{ cmd "mn_pop;" }
	}
	func leave
	{
		cmd "mn_pop;"
	}
}

