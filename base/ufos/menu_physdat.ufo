// ==================
// PHYSDATA BASE MENU
// ==================

menu physdata
{
	// ==================
	// background
	// ==================

	pic bar_physdata
	{
		image	hud/bar_phys
		pos		"256 96"
		click
	}

	string actorname
	{
		string	"*cvar mn_name"
		pos		"283 123"
	}

	// ==================
	// model
	// ==================

	model actor
	{
		model		"*cvar mn_body"
		skin		"*cvar mn_skin"
		anim		"stand2"
		angles		"0 70 90"
		pos			"270 170"
		size		"200 200"
		autoscale	true
	}

	model head
	{
		model	"*cvar mn_head"
		skin	"*cvar mn_skin"
		tag		"actor tag_head"
	}

	// ==================
	// abilities
	// ==================

	string pwr_lbl { pos "480 128"  string "_Strength:" }
	string pwr_val { pos "744 128"  string "*cvar mn_tpwr" align ur }
	pic pwr_bdr    { pos "478 144"  image menu/bar_border }
	tbar pwr_bar   { pos "482 144"  current "*cvar mn_vpwr" point_width 2.2 gap_width 3 texl "3 0" image menu/bar_attribute }

	string spd_lbl { pos "480 160" string "_Speed:" }
	string spd_val { pos "744 160" string "*cvar mn_tspd" align ur }
	pic spd_bdr    { pos "478 176" image menu/bar_border }
	tbar spd_bar   { pos "482 176" current "*cvar mn_vspd" point_width 2.2 gap_width 3 texl "3 0" image menu/bar_attribute }

	string acc_lbl { pos "480 192" string "_Accuracy:" }
	string acc_val { pos "744 192" string "*cvar mn_tacc" align ur }
	pic acc_bdr    { pos "478 208" image menu/bar_border }
	tbar acc_bar   { pos "482 208" current "*cvar mn_vacc" point_width 2.2 gap_width 3 texl "3 0" image menu/bar_attribute }

	string mnd_lbl { pos "480 224" string "_Mind:" }
	string mnd_val { pos "744 224" string "*cvar mn_tmnd" align ur }
	pic mnd_bdr    { pos "478 240" image menu/bar_border }
	tbar mnd_bar   { pos "482 240" current "*cvar mn_vmnd" point_width 2.2 gap_width 3 texl "3 0" image menu/bar_attribute }

	string cls_lbl { pos "480 262" string "_Close Combat:" }
	string cls_val { pos "744 262" string "*cvar mn_tcls" align ur }
	pic cls_bdr    { pos "478 278" image menu/bar_border }
	tbar cls_bar   { pos "482 278" current "*cvar mn_vcls" point_width 2.2 gap_width 3 texl "3 0" image menu/bar_skill }

	string hvy_lbl { pos "480 294" string "_Heavy Weapons:" }
	string hvy_val { pos "744 294" string "*cvar mn_thvy" align ur }
	pic hvy_bdr    { pos "478 310" image menu/bar_border }
	tbar hvy_bar   { pos "482 310" current "*cvar mn_vhvy" point_width 2.2 gap_width 3 texl "3 0" image menu/bar_skill }

	string ass_lbl { pos "480 326" string "_Assault Weapons:" }
	string ass_val { pos "744 326" string "*cvar mn_tass" align ur }
	pic ass_bdr    { pos "478 342" image menu/bar_border }
	tbar ass_bar   { pos "482 342" current "*cvar mn_vass" point_width 2.2 gap_width 3 texl "3 0" image menu/bar_skill }

	string snp_lbl { pos "480 358" string "_Sniper Rifles:" }
	string snp_val { pos "744 358" string "*cvar mn_tsnp" align ur }
	pic snp_bdr    { pos "478 374" image menu/bar_border }
	tbar snp_bar   { pos "482 374" current "*cvar mn_vsnp" point_width 2.2 gap_width 3 texl "3 0" image menu/bar_skill }

	string exp_lbl { pos "480 392" string "_High-Explosives:" }
	string exp_val { pos "744 392" string "*cvar mn_texp" align ur }
	pic exp_bdr    { pos "478 408" image menu/bar_border }
	tbar exp_bar   { pos "482 408" current "*cvar mn_vexp" point_width 2.2 gap_width 3 texl "3 0" image menu/bar_skill }

	// ==================
	// health and morale
	// ==================

	string hp_val
	{
		string	"*cvar mn_hp"
		pos		"696 472"
		align	uc
	}
	pic ekg_hp
	{
		image	hud/phys_ekg_noclamp
		pos		"334 465"
		size	"324 32"
	}

	string morale_val
	{
		string	"*cvar mn_morale"
		pos		"696 512"
		align	uc
	}
	pic ekg_morale
	{
		image	hud/phys_mor_noclamp
		pos		"334 504"
		size	"324 32"
	}

	// ==================
	// buttons
	// ==================

	custombutton button_exit
	{
		image	menu/button_background blend true
		texl	"192 0"	size "64 37"
		pos		"684 554"
		icon return
		click	{ cmd "mn_pop;" }
	}
}

// ==================
// HUD PHYSDATA
// ==================

menu hudphysdat extends physdata
{
	zone bt_physdata
	{
		image	hud/buttons1
		mousefx true
		pos		"983 266"
		size	"36 75"
		click	{ cmd "mn_pop;" }
	}

	zone bt_inventory
	{
		image	hud/buttons1
		mousefx true
		pos		"983 376"
		size	"36 75"
		click	{ cmd "mn_pop;" }
	}
	func leave
	{
		cmd "mn_pop;"
	}
}

// ==================
// ALT HUD PHYSDATA
// ==================

menu ahudphysdat extends physdata
{
	zone zone_clickright
	{
		tooltip "_Inventory and physical stats"
		pos     "878 84"
		size    "130 265"
		click   { cmd "mn_pop;" }
		rclick  { cmd "mn_pop;" }
	}
	func leave
	{
		cmd "mn_pop;"
	}
}
