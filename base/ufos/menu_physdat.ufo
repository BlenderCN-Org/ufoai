// ==================
// PHYSDATA BASE MENU
// ==================

menu physdata
{
	{
		pos "256 96"
		size "512 512"
	}

	// ==================
	// background
	// ==================

	pic bar_physdata
	{
		image	hud/bar_phys
		pos		"0 0"
		click
	}

	string actorname
	{
		string	"*cvar mn_name"
		pos		"27 27"
	}

	// ==================
	// model
	// ==================

	model actor
	{
		model		"*cvar mn_body"
		skin		"*cvar mn_skin"
		anim		"stand2"
		angles		"0 70 90"
		pos			"27 73"
		size		"188 263"
		autoscale	true
	}

	model head
	{
		model	"*cvar mn_head"
		skin	"*cvar mn_skin"
		tag		"actor tag_head"
	}

	// ==================
	// abilities
	// ==================

	string pwr_lbl { pos "224 32"  string "_Strength:" }
