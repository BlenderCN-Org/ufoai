stage intro
{
	set first
	{
		seq	intro
		delay		"0 1 0"
		frame		"0 3 0"
		missions	"vil_grenchen"
		number		1
		quota		0
	}
	set terror_only
	{
		needed		first
		delay		"0 0 1"
		frame		"0 10 0"
		expire		"0 3 0"
		missions	"or_tabelbala italy japan oriental vil_lille vil_albany tropic_river tropic_drug"
		quota		4
		nextstage	ufos_are_coming
	}
	set stop
	{
		needed		terror_only
		delay		"0 20 0"
		endstage	intro
	}
}

stage ufos_are_coming
{
	set first
	{
		seq	ufos_are_coming
		commands	"addufo"
	}
	set crashed_and_landed
	{
		delay		"0 0 1"
		frame		"0 10 0"
		expire		"0 3 0"
		missions	"transport mine_crash construction farm office or_asyut frozen_landingnature frozen_alienlandingindustrial"
		quota		5
		nextstage	invasion
	}
	set stop
	{
		needed		crashed_and_landed
		delay		"0 110 0"
		endstage	ufos_are_coming
	}
}

