	// ===================
	// left side text node
	// ===================

	panel base_summary_bg {
		pos	"12 103"
		size	"551 655"
		image	menu/panel_grey_green_large
		blend	true
	}

	text txt_base_summary
	{
		textid		TEXT_STATS_BASESUMMARY
		pos			"34 124"
		size		"507 608"
		lineheight	16
		tabwidth	42
		font		f_small
		scrollbar	true
		rows		"38"
		longlines	prettychop
		wheel
	}

	// ==================
	// info window
	// ==================

	panel info_bg {
		pos	"588 337"
		size	"408 423"
		image	menu/panel_grey_green_large
		blend	true
	}

	text txt_info
	{
		pos			"615 362"
		size		"350 370"
		font		f_small
		lineheight		16
		tabwidth	50
		wheel
		scrollbar	yes
		rows		"23"
		textid			TEXT_STANDARD
	}

	// ==================
	// Base header
	// ==================

	string base_name
	{
		tooltip	"_Name of this base"
		string	"*cvar mn_base_title"
		pos	"60 30"
		size "240 32"
		textalign	cl
		padding	8
		font	f_big
	}

	string txt_credits_caption
	{
		string		"_CREDITS"
		pos			"675 30"
		size		"100 30"
		font		f_big
	}

	string txt_credits
	{
		tooltip		"_Organisation capital"
		string		"*cvar mn_credits"
		pos			"780 30"
		size		"130 30"
		font		f_big
		textalign	ur
	}

	custombutton bt_continue
	{
		tooltip	"_Back to baseview"
		image	menu/button_background	blend	true
		texl	"1 1"	size	"59 55"
		pos		"950 20"
		icon	"return"
		click	{ cmd "mn_pop;" }
	}

	// ==================
	// init
	// ==================
	func init
	{
		call resetbaselayout
		cmd "basesummary_init;"
	}
}
