		{
			pos			"29 30"
			size		"67 72"
			color		"1 0 0 0.4"
			padding		2
			baseid		0
			click 		{
				call resetbaselayout
				*path:this bgcolor "1 1 1 1"
				cmd "basesummary_selectbase <baseid>;"
			}
		}

