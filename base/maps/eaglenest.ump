// b: dropship

tile +main
{
7 7

0      0      0      0      0      0      0
0     +a     +a      b      b      b      0
0     +a     +a      b      b      b      0
0     +a     +a     +a     +a     +a      0
0     +a     +a     +a     +a     +a      0
0     +a     +a     +a     +a     +a      0
0      0      0      0      0      0      0
}

tile +craft_drop_firebird
{
5 4

0      0      0      0      0
a     +b     +b     +b      0
a     +b     +b     +b      0
a      a      a      a      0
}

tile +craft_drop_herakles
{
4 5

0      0      0      0
0      +b     +b     a 
0      +b     +b     a 
0      +b     +b     a 
0      a      a      a
}

// ########################################
