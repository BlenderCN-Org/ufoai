// *********************************
// UFO Crash THEME
// *********************************

// Tiletypes:
// ----------
// +: tile contains something
// a: any
// b: street horizontal
// c: street vertical

base ucn/uc_

// *********************************
// Tiles
// *********************************

// ---------------------------------
// Dropship
// ---------------------------------
tile +drop_firebird
{
5 4
0      ab      ab     ab     0
ac     +a      +a     +a      ac
ac     +a      +a     +a      ac
0      ab      ab     ab     0
}

// ---------------------------------
// Stiletto
// ---------------------------------
tile +inter_stiletto
{
5 4
0      ab      ab     ab     0
ac     +a      +a     +a      ac
ac     +a      +a     +a      ac
0      ab      ab     ab     0
}

