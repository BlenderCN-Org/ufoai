{
5 4
0      ab      ab     ab     0
ac     +a      +a     +a      ac
ac     +a      +a     +a      ac
0      ab      ab     ab     0
}

// ---------------------------------
// house #1
// ---------------------------------
tile +h01
{
4 3

0      ab     ab     0
ac     +a     +a      ac
0      ab     ab     0
}


// ---------------------------------
// house #2 (same as house #1 but smaller ground tile)
// ---------------------------------
tile +h02
{
3 3

0      ab     0
ac     +a      ac
0      ab     0
}

// ---------------------------------
// ufos
// ---------------------------------
tile +ufo_harvester
{
8 6

0      ab     ab     ab     ab     ab     ab     0
ac     +a     +a      +a     +a      +a     +a      ac
ac     +a     +a      +a     +a      +a     +a      ac
ac     0      0       0      +a      +a     +a      ac
ac     0      0       0      +a      +a     +a      ac
0      ab     ab     ab     ab     ab     ab     0
}

// *********************************
// Assemblies
// *********************************

assembly ufo_harvester
{
size "7 5"
+h01 "0 10"
+h02 "0 10"
+ufo_harvester "1 1"
*rm_dropship +drop_firebird "1 1"
}

